<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "https://hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="Charackter.Character" table="character" >
        <id name="id" type="int">
            <column name="id" />
            <generator class="increment"/>
        </id>
        <property name="klasse" type="string">
            <column name="klasse" />
        </property>
        <property name="description" type="string">
            <column name="description" />
        </property>
        <property name="name" type="string">
            <column name="name" />
        </property>
        <property name="maxHp" type="int">
            <column name="maxhp" />
        </property>

        <property name="ad" type="int">
            <column name="ad" />
        </property>
        <property name="ap" type="int">
            <column name="ap" />
        </property>
        <set name="abilitys" table="ability" fetch="select"  lazy="false">
            <key>
                <column name="charid"/>
            </key>
            <one-to-many class="Charackter.Ability"  />
        </set>
        </class>
  </hibernate-mapping>

